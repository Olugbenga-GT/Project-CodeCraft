<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="sample.controllers.ViewNoteController" style="-fx-background-color: #169c8e"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding><Insets top="5" right="25" bottom="10" left="25"/></padding>

    <Text text="Create your New Note" style="-fx-font-family:'Arial Black','Segoe UI Emoji'"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="6" GridPane.halignment="CENTER"/>

     <TextField style="-fx-background-color: white" editable="false" text="Your Note Title"
                GridPane.columnIndex="0" GridPane.rowIndex="3"
                GridPane.rowSpan="1"/>

    <TextArea text="Enter your Note here" editable="false"
              GridPane.fillHeight="63" GridPane.fillWidth="59" GridPane.columnIndex="0" GridPane.rowIndex="5"  GridPane.columnSpan="1"/>

    <HBox spacing="10" alignment="center"
          GridPane.columnIndex="0" GridPane.rowIndex="7">
        <Button text="Edit" style="-fx-background-color:#39d011 "
                onAction="#handleEditButtonAction"/>
        <Button text="Delete" style="-fx-background-color:#a81818 "
                onAction="#handleDeleteButtonAction"/>
        <Button text="Back" style="-fx-background-color:#e2dcdc "
                onAction="#handleBackButtonAction"/>
    </HBox>

</GridPane>